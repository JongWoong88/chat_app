<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="my.chat_app.mybatis.mapper.UserInfoMapper">

    <select id="selectByPk">
        SELECT *
        FROM woong.user_info
        WHERE id = #{pk}
    </select>

    <select id="selectByCondition">
        SELECT *
        FROM woong.user_info
        WHERE id > #{pk}
    </select>

    <insert id="insert" parameterType="my.chat_app.mybatis.model.UserInfo">
        INSERT INTO woong.user_info (nickname, password)
        VALUES (#{nickname}, #{password})
    </insert>

</mapper>